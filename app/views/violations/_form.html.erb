<%= form_for(@violation) do |f| %>
  <% if @violation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@violation.errors.count, "error") %> prohibited this violation from being saved:</h2>

      <ul>
      <% @violation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :plateNum, 'Plate Number' %><br>
    <%= f.text_field :plateNum %>
  </div>
  <div class="field">
    <%= f.label :plateState, 'State' %><br>
    <%= f.text_field :plateState %>
  </div>
  <div class="field">
    <%= f.label :violationType, 'Violation' %><br>
    <%= f.text_area :violationType %>
  </div>
  <div class="field picture_field" style = "margin-bottom: 25px;">
    <%= f.label :picture, 'Picture' %><br>
    <%= f.file_field :picture %>
	<input id="browse-click" type="button" class="button" value="Browse for files"/>
	<p id="file-name" style = "margin: 0px;margin-top: 3px;"></p>
  </div>
  <div class="field">
    <%= f.label :date, 'Date' %><br>
    <%= f.datetime_select :date, ampm: true %>
  </div>
  <div class="actions" style = "padding-top: 10px;">
    <%= f.submit %>
  </div>
<% end %>
