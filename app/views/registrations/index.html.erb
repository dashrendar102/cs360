<h1>Listing registrations</h1>

<table border="1" cellpadding="10">
  <thead>
    <tr>
      <th>Name</th>
      <th>Platenum</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td align="center"><%= registration.name %></td>
        <td align="center"><%= registration.plateNum %></td>
        <td align="center"><%= registration.email %></td>
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

