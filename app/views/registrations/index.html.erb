<div style = "width: 620px;margin: 0px auto;padding: 30px 30px 30px 30px;background: #bbbaba;border: 1px solid #d8d7d7;border-radius: 6px;-moz-border-radius: 6px;-webkit-border-radius: 6px;">
<h1>Listing registrations</h1>

<table border="1" cellpadding="10">
  <thead>
    <tr>
      <th>Name</th>
      <th>Plate Number</th>
      <th>State</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td align="center"><%= registration.name %></td>
        <td align="center"><%= registration.plateNum %></td>
        <td align="center"><%= registration.state %></td>
        <% found = registration.email.index('@') %>
  		<% front = registration.email[0,found] %>
        <td align="center"><%= registration.email.gsub(/#{Regexp.escape(front)}@/, '####@') %></td>
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registration', new_registration_path %>
</div>